<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hrresumemanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ShowResume"
            android:label="@string/title_activity_show_resume"
            android:theme="@style/AppTheme.NoActionBar"><intent-filter>
            <action android:name="android.intent.action.SEND"/>

            <data android:mimeType="message/rfc822"/></intent-filter>
        </activity>
        <activity
            android:name=".RecievedApplications"
            android:label="@string/title_activity_recieved_applications"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".job_details" />
        <activity
            android:name=".JobOpenings"
            android:label="Job Openings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SignUp" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>